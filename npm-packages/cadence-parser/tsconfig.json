{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "./dist/esm"
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "*.js"
  ]
}